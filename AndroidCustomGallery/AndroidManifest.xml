<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sams.androidcustomgallery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppBaseTheme" >
        <activity android:name="com.sams.androidcustomgallery.SamsGallery" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sams.androidcustomgallery.GalleryChildActivity"
            android:label="@string/title_activity_gallery_child" >
        </activity>
        <activity
            android:name="com.sams.androidcustomgallery.PreviewActivity"
            android:label="@string/title_activity_preview" >
        </activity>
    </application>

</manifest>
